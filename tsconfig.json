{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "*": ["*", "packages/*", "app/*", "config/typescript/modules/*"]
    },
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext.asynciterable",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./config/typescript/**/*",
    "./app/**/*",
    "./client/**/*",
    "./server/**/*",
    "./tests/**/*"
  ],
  "exclude": ["./{node_modules/**/*", "./{build}/**/*"]
}
